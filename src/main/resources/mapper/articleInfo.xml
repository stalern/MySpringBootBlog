<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--命名空间指的是该xml指向的持久层的类-->
<mapper namespace="cn.wxxlamp.blog.dao.ArticleInfoMapper">

    <update id="updateArticleInfo" parameterType="cn.wxxlamp.blog.domain.ArticleInfo">
        update article_info set id = #{id}
        <if test="title != null">
            ,title = #{title}
        </if>
        <if test="summary != null">
            ,summary = #{summary}
        </if>
        <if test="traffic != null">
            ,traffic = #{traffic}
        </if>
        <if test="loveNum != null">
            ,love_num = #{loveNum}
        </if>
        where id = #{id}
    </update>

    <insert id="insertArticleInfo" parameterType="cn.wxxlamp.blog.domain.ArticleInfo" useGeneratedKeys="true" keyProperty="id">
        insert into article_info (title, summary) values (#{title}, #{summary})
    </insert>
</mapper>